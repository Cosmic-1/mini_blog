<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Name</th>
      <th scope="col">Posts count</th>
    </tr>
  </thead>
  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr>
        <th scope="row"><%= admin_user.id %></th>
        <td><%= admin_user.email %></td>
        <td><%= link_to admin_user.name, profile_path(admin_user.name) %></td>
        <td><%= admin_user.posts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
