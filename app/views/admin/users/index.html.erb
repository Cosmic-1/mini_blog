<% set_meta_tags(
  title: t('.meta.title'),
) %>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= t('.table.number') %></th>
      <th scope="col"><%= t('.table.email') %></th>
      <th scope="col"><%= t('.table.name') %></th>
      <th scope="col"><%= t('.table.posts') %></th>
       <th scope="col"><%= t('.table.comments') %></th>
      <th scope="col"><%= t('.table.management') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= link_to user.posts.count, admin_user_posts_path(user) %></td>
        <td><%= link_to user.comments.count, admin_user_comments_path(user) %></td>
        <td>       <%= render partial: "admin/panel/management_links", 
              locals: {
                destroy: { name: User, url: admin_user_path(user) }, 
                show: { name: User, url: admin_user_path(user) },
                edit: { name: User, url: edit_admin_user_path(user) } 
                      } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
