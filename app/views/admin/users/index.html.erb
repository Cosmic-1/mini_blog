<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Name</th>
      <th scope="col">Posts count</th>
      <th scope="col">Management</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= link_to user.posts.count, admin_user_posts_path(user) %></td>
        <td>       <%= render partial: "admin/panel/management_links", 
              locals: {
                destroy: { name: User, url: admin_user_path(user) }, 
                show: { name: User, url: admin_user_path(user) },
                edit: { name: User, url: edit_admin_user_path(user) } 
                      } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
