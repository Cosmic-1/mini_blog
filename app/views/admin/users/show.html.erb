<div class="card" style="margin-bottom: 10px">
  <div class="card-header">
    <%= render partial: "admin/panel/management_links", 
              locals: {
                destroy: { name: User, url: admin_user_path(@user) }, 
                show: { name: User, url: admin_user_path(@user) },
                edit: { name: User, url: edit_admin_user_path(@user) } 
                      } %>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= @user.email %></li>
    <li class="list-group-item"><%= @user.name %></li>
    <li class="list-group-item">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, size: "300x300" %>
      <% else %>
        <svg class="bd-placeholder-img" height="300" width="300" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false">
          <title>Placeholder</title>
          <rect width="100%" height="100%" fill="#868e96"></rect>
          <text x="40%" y="50%" fill="#dee2e6" dy=".3em">No Image</text>
        </svg>
      <% end %>
    </li>
  </ul>
  <div class="card-body">
    <p class="card-text"><%= @user.body %></p>
  </div>
  <div class="card-footer">
    <%= render partial: "admin/panel/management_links", 
              locals: {
                destroy: { name: User, url: admin_user_path(@user) }, 
                show: { name: User, url: admin_user_path(@user) },
                edit: { name: User, url: edit_admin_user_path(@user) } 
                      } %>
  </div>
</div>
