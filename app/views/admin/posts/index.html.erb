<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Published</th>
      <th scope="col">Comments enabled</th>
      <th scope="col">Comments count</th>
      <th scope="col">Category</th>
      <th scope="col">Meta data</th>
      <th scope="col">Management</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= post.id %></th>
        <td><%= post.title %></td>
        <td><%= post.published %></td>
        <td><%= post.comments_enabled %></td>
        <td><%= link_to post.comments.count, admin_post_comments_path(post) %></td>
        <td><%= link_to post.category.title, category_path(post.category) %></td>
        <td>
          <%= post.meta_title %> <br>
          <%= post.meta_description %> <br>
          <%= post.meta_keywords %>
        </td>
          <td><%= render partial: "admin/layouts/management_links", 
              locals: { 
                      url_destroy: admin_post_path(post), 
                      url_show: post_path(post), 
                      url_edit: edit_admin_post_path(post) 
                      } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
