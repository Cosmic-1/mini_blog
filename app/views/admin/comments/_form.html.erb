<%= form_with model: @comment, url: url do |f| %>
  <div class="mb-3">
    <%= f.label "Name: " %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
    <div class="mb-3">
    <%= f.label "Email: " %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label "Body: " %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label "Post: " %>
    <%= f.select :post_id, @posts, {}, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
