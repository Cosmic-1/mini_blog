<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= t('admin.comments.table.number') %></th>
      <th scope="col"><%= t('admin.comments.table.body') %></th>
      <th scope="col"><%= t('admin.comments.table.published') %></th>
      <th scope="col"><%= t('admin.comments.table.user') %></th>
      <th scope="col"><%= t('admin.comments.table.post') %></th>
      <th scope="col"><%= t('admin.comments.table.management') %></th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <th scope="row"><%= comment.id %></th>
        <td><%= comment.body %></td>
        <td><%= humanize_boolean comment.published %></td>
        <td><%= link_to comment.user.name, admin_user_path(comment.user) %></td>
        <td><%= link_to comment.post.title, admin_post_path(comment.post) %></td>
        <td><%= render partial: "admin/panel/management_links", 
              locals: {
                destroy: { name: Comment, url: admin_comment_path(comment) }, 
                show: { name: Comment, url: admin_comment_path(comment) },
                edit: { name: Comment, url: edit_admin_comment_path(comment) } 
                      } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
