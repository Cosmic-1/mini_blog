<div class="container text-center">
  <div class="row">
    <% if can? :read, show[:name] %>
      <div class="col">
        <%= link_to 'Show', show[:url], class: "btn btn-primary", role: "button" %>
      </div>
    <% end %>
    <% if can? :edit, edit[:name] %>
      <div class="col">
        <%= link_to 'Edit', edit[:url], class: "btn btn-warning", role: "button" %>
      </div>
    <% end %>
    <% if can? :destroy, destroy[:name] %>
      <div class="col">
        <%= button_to 'Destroy', destroy[:url], method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
