<% set_meta_tags(
  title: t('.meta.title'),
  description: t('.meta.description'),
  keywords: t('.meta.keywords'), 
  canonical: posts_url
) %>
<div id="posts">
  <% if @posts %>
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
    <%= paginate @posts %>
  <% else %>
    <p><%= t('posts.no_posts') %></p>
  <% end %>
</div>
