<% set_meta_tags(title: t('.meta.title')) %>

<div class="row" style="margin-bottom: 10px; margin-top:10px">
  <div class="col-4"><h3><%= t('.quantity')%> <%= @query.result.count %></h3></div>
  <div class="col-8"><%= render 'search_form' %></div>
</div>

<% unless @posts.empty? %>

  <% @posts.each do |post| %>
    <%= render partial: 'mini_post', locals:{post:post} %>
  <% end %>

  <%= paginate @posts %>
<% else %>
  <p><%= t('.no_found')%></p>
<% end %>
