<div class="list-group">
  <% Category.all.each do |category| %>
    <%= link_to category.title, category_path(category), class: "list-group-item list-group-item-action" %>
  <% end %>
</div>
<div class="container text-center" style="margin: 10px;">
  <% if admin_user_signed_in? %>
    <div class="row">
      <div class="col">
        <% if current_admin_user.avatar.attached? %>
          <%= link_to admin_admin_users_show_path do %>
            <%= image_tag current_admin_user.avatar, size: "170x170" %>
          <% end %>
        <% else %>
          <svg class="bd-placeholder-img" height="170" width="170" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false">
            <title>Placeholder</title>
            <rect width="100%" height="100%" fill="#868e96"></rect>
            <text x="30%" y="50%" fill="#dee2e6" dy=".3em">No Image</text>
          </svg>
        <% end %>
      </div>
      <div class="col">
        <p>Hello, <%= link_to current_admin_user.name, profile_path(name: current_admin_user.name), class: "link-primary" %>!</p>
        <p><%= link_to 'Edit', edit_admin_user_registration_path, class: "btn btn-success", role: "button" %></p>
        <p> <%= button_to 'Log out', destroy_admin_user_session_path, class: "btn btn-danger", method: :delete %></p>
      </div>
    </div>
  <% else %>
    <%= link_to 'Log in', new_admin_user_session_path, class: "btn btn-outline-success" %>
    <%= link_to 'Registeration', new_admin_user_registration_path, class: "btn btn-outline-success" %>
  <% end %>
</div>
